    <!-- Codigo para a transição do conteúdos de curos-->
    <script>
        function tableshowhide(a, b, c) {
            len = BtnCursos.childElementCount;
            closeinformacoes();
            for (i = 0; i < len; i++) {
                BtnCursos.children[i].onclick = function() {
                    closeinformacoes();
                    informacoes.children[this.id].style.display = "block";
                }
            }

            function closeinformacoes() {
                for (i = 0; i < informacoes.childElementCount; i++) {
                    informacoes.children[i].style.display = "none";
                }
            }

            BtnCursos.children[c].click();
        }

        tableshowhide("BtnCursos", "informacoes", "EngComput");
    </script>